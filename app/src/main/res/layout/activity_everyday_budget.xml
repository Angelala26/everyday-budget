<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EverydayBudget"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/amount_per_day_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Amount per day: "
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"/>

    <TextView
        android:id="@+id/regular_income_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regular income: "
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/recurring_expenses_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recurring expenses: "
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/savings_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Savings: "
        android:layout_weight="1"/>

</LinearLayout>
